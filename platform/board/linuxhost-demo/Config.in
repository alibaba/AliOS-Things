    bool "Support external module"
    default n

config MESHLOWPOWER
    bool
    default y

# link security config
config CONFIG_LS_DEBUG
    bool
    default y
config CONFIG_LS_ID2_OTP
    bool
    default y
config CONFIG_LS_KM_SE
    bool
    default n
config CONFIG_LS_KM_TEE
    bool
    default n

