config AOS_APP_LINKKITAPP
    bool "linkkitapp"
    select AOS_COMP_CLI if !AOS_BOARD_ESP8266
    select AOS_COMP_NETMGR
    select AOS_COMP_OTA
    select AOS_COMP_CJSON
    select AOS_COMP_LINKKIT_SDK_C
    select APP_FEATURE_LINKKIT
    select AOS_COMP_CJSON
    select AOS_COMP_LWIP if LWIP = 1
    select AOS_COMP_BREEZE if LINKKITAPP_CONFIG_COMBOAPP = 1
    select AOS_COMP_BREEZE_HAL if LINKKITAPP_CONFIG_COMBOAPP = 1
    help
        linkkitapp

if AOS_APP_LINKKITAPP
# Configurations for app linkkitapp
config LINKKITAPP_CONFIG_COMBOAPP
    int "enable combo"
    range 0 1
    default 0
    help

config LINKKITAPP_CONFIG_CASE
    string "case, sched or cntdown or left blank(default)"
    default ""
    help

config LINKKITAPP_CONFIG_DEPRECATED
    int "use deprecated api"
    range 0 1
    default 0
    help

config LINKKITAPP_CONFIG_PRINT_HEAP
    int "show free heap duration"
    range 0 1
    default 0
    help

endif
