if AOS_CREATE_PROJECT
config AOS_COMP_NETMGR
    bool
    default y
# do NOT select depend component in this file
# use $(NAME)_COMPONENTS in aos.mk
endif

# Backward compatibility
if !AOS_CREATE_PROJECT
config AOS_COMP_NETMGR
    bool "netmgr"
    default n
    select AOS_COMP_KV
    select AOS_COMP_OSAL_AOS
